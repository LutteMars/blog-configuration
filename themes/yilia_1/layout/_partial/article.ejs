    })();
  </script>
  <noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
</section>
<% } %>


<% if (!index && post.comments && config.changyan_appid && config.changyan_conf){ %>
<section id="comments" style="margin-left:29px; margin-right:29px;">
<!--PC版-->
<div id="SOHUCS" sid= "<%= page.title%>" style = "background:#fffaf299;padding:0 15px;border-radius:0 0 3px 3px;">
<div node-type="is-icp" ></div>
</div>
